<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>sita.filter.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/adminHome.jsp</url-pattern>
        <url-pattern>/showLog.jsp</url-pattern>
        <url-pattern>/manageUser.jsp</url-pattern>
        <url-pattern>/manageTA.jsp</url-pattern>
        <url-pattern>/registerTA.jsp</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>validateLogin</servlet-name>
        <servlet-class>sita.controller.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createAccount</servlet-name>
        <servlet-class>sita.controller.createAccount</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>validateSession</servlet-name>
        <servlet-class>sita.controller.validateSession</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>sita.controller.logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterTA</servlet-name>
        <servlet-class>sita.controller.RegisterTA</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>search</servlet-name>
        <servlet-class>sita.controller.search</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>changePassword</servlet-name>
        <servlet-class>sita.controller.changePassword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>searchResult</servlet-name>
        <servlet-class>sita.controller.searchResult</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Update</servlet-name>
        <servlet-class>sita.controller.Update</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>validateLogin</servlet-name>
        <url-pattern>/validateLogin.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createAccount</servlet-name>
        <url-pattern>/create.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>validateSession</servlet-name>
        <url-pattern>/validateSession.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterTA</servlet-name>
        <url-pattern>/RegisterTA.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>search</servlet-name>
        <url-pattern>/search.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>changePassword</servlet-name>
        <url-pattern>/changePassword.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>searchResult</servlet-name>
        <url-pattern>/searchResult.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Update</servlet-name>
        <url-pattern>/Update.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/error/general.jsp</location>
    </error-page>
</web-app>
